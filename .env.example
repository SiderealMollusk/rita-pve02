# Proxmox Configuration (Terraform)
TF_VAR_proxmox_endpoint="https://<proxmox-ip>:8006/"
TF_VAR_proxmox_api_token="op://vault/proxmox/api-token"
TF_VAR_ssh_public_key="op://vault/ssh/public-key"
TF_VAR_node_name="pve"
TF_VAR_storage_pool="local-lvm"
TF_VAR_network_bridge="vmbr0"

# SSH Configuration (Ansible)
SSH_PRIVATE_KEY="op://vault/ssh/private-key"

# Tailscale Configuration
TAILSCALE_AUTH_KEY="op://vault/tailscale/auth-key"

# VM Configuration
VM_SSH_PASSWORD="op://vault/k8s-vms/ssh-password" # Optional if using keys
