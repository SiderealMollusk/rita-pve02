# Tailscale IP for Proxmox host
PVE02_TS_MAGIC_IP=100.121.136.16

# Proxmox API Configuration
# When running Terraform ON the Proxmox host, use localhost
TF_VAR_proxmox_endpoint="https://localhost:8006/"

# Proxmox API token (rotate with: npm run rotate:proxmox-token)
# Format: username@realm!token-name=secret
TF_VAR_proxmox_api_token="root@pam!test-1=your-token-secret-here"

# SSH public key for VM cloud-init initialization
# Generate on Proxmox: ssh-keygen -t ed25519 -f ~/.ssh/id_ed25519
TF_VAR_ssh_public_key="ssh-ed25519 AAAA... user@host"

# Proxmox node name - IMPORTANT: Use actual node name, not hostname
# Verify with: pvesh get /nodes
# Common mistake: hostname might be "pve" but node_name is "pve02"
TF_VAR_node_name="pve02"

# Storage pool for VM disks
TF_VAR_storage_pool="local-lvm"

# Network bridge (verify with SDN permissions granted)
TF_VAR_network_bridge="vmbr0"
